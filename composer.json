{
    "name": "webtrendzs/openai",
    "description": "OpenAI GPT-3 Api Client in PHP",
    "license": "LGPL-3.0-or-later",
    "type": "contao-bundle",
    "version": "1.0.2-beta",
    "authors": [
        {
            "name": "Ben Mosong",
            "homepage": "https://github.com/webtrendzs"
        }
    ],
    "homepage": "https://cloudsasa.com",
    "support": {
        "issues": "https://github.com/webtrendzs/openai/issues",
        "source": "https://github.com/webtrendzs/openai"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^5.1",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/http-kernel": "^4.4 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5",
        "contao/manager-plugin": "^2.3.1",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^5.4 || ^6.0"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "OpenAI\\GPT3\\": "src/"
        },
        "classmap": [
            "src/Resources/contao/"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenAI\\GPT3\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "OpenAI\\GPT3\\ContaoManager\\Plugin"
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
